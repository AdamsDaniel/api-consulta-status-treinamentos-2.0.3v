<div class="card" style="width: 100%; max-width: 600px;">
    <div class="card-body d-flex align-items-center flex-column">
        <table class="table table-striped table-borderless">
            <tbody>
                <tr>
                    <td class="fw-semibold">Nome</td>
                    <td>
                        <%= pass.nome %>
                        <%= pass.sobrenome %>
                    </td>
                </tr>
                <tr>
                    <td class="fw-semibold">Matricula</td>
                    <td>
                        <%= pass.matricula %>
                    </td>
                </tr>
                <tr>
                    <td class="fw-semibold">Privilégio</td>
                    <td>
                        <%= pass.privilegio %>
                    </td>
                </tr>
                <tr>
                    <td class="fw-semibold">Data de criação</td>
                    <td>
                        <%= pass.data %>
                    </td>
                </tr>
                <tr>
                    <td class="fw-semibold">Senha gerada</td>
                    <td id="password-td-<%= pass.id %>">
                        <%= pass.senha %>
                    </td>
                </tr>
            </tbody>
        </table>
        <button id="copy-password-btn-<%= pass.id %>"
            class="btn btn-sm btn-secondary" onclick="copyPasswordToClipoard('copy-password-btn-<%= pass.id %>', 'password-td-<%= pass.id %>')">Copiar Senha</button>
    </div>
</div>